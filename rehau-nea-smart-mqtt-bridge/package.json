{
  "name": "rehau-nea-smart-mqtt-bridge-typescript",
  "version": "4.0.39",
  "description": "MQTT bridge for REHAU NEA SMART 2.0 heating systems with automatic 2FA support (TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run build:backend && npm run build:web-ui",
    "build:backend": "tsc",
    "build:web-ui": "cd web-ui && npm install && npm run build",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "ts-node test-auth-only.ts",
    "test:rehau": "ts-node test-rehau-only.ts",
    "test:config-validation": "ts-node test/test-config-validation.ts",
    "parseUserData": "ts-node src/parsers/cli-user-data.ts",
    "parseUserDataV2": "ts-node src/parsers/cli-user-data-v2.ts",
    "parseInstallationData": "ts-node src/parsers/cli-installation-data.ts",
    "parseInstallationV2": "ts-node src/parsers/cli-installation-data-v2.ts",
    "compareParsers": "ts-node src/parsers/compare-parsers.ts",
    "testValidation": "ts-node src/parsers/test-validation.ts",
    "test:mqtt-disconnect": "ts-node test-mqtt-disconnect.ts",
    "release": "node scripts/release.js patch",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "rehau",
    "mqtt",
    "home-assistant",
    "hvac",
    "climate",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "axios-cookiejar-support": "^5.0.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lz-string": "^1.5.0",
    "mailparser": "^3.9.3",
    "mqtt": "^5.3.0",
    "node-pop3": "^0.11.0",
    "playwright": "^1.40.0",
    "poplib": "^0.1.7",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tough-cookie": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "minimist": "^1.2.8"
  }
}
