{
  "name": "rehau-nea-smart-mqtt-bridge-typescript",
  "version": "2.7.7",
  "description": "MQTT bridge for REHAU NEA SMART 2.0 heating systems (TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "ts-node test-local.ts",
    "test:watch": "nodemon --exec ts-node test-local.ts",
    "test:auth": "ts-node test-auth-only.ts",
    "test:rehau": "ts-node test-rehau-only.ts",
    "parseUserData": "ts-node src/parsers/cli-user-data.ts",
    "parseUserDataV2": "ts-node src/parsers/cli-user-data-v2.ts",
    "parseInstallationData": "ts-node src/parsers/cli-installation-data.ts",
    "parseInstallationV2": "ts-node src/parsers/cli-installation-data-v2.ts",
    "compareParsers": "ts-node src/parsers/compare-parsers.ts",
    "testValidation": "ts-node src/parsers/test-validation.ts"
  },
  "keywords": [
    "rehau",
    "mqtt",
    "home-assistant",
    "hvac",
    "climate",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "lz-string": "^1.5.0",
    "mqtt": "^5.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/lz-string": "^1.5.0",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
